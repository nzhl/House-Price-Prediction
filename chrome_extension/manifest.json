{
    "manifest_version": 2,
    "name": "Zoopla House Price Predictor",
    "version": "1.0",

    "description": "The tool provides the functionality to predict the house price of Nottingham in Zoopla",
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "page_action": {
      "default_icon": {
          "16": "images/icon16.png",
          "32": "images/icon32.png"
      },
      "default_title": "House Price Prediction",
      "default_popup": "popup.html"
    },
    "background" : {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "permissions": ["declarativeContent", "tabs", "http://localhost:3000/*"]
  }
